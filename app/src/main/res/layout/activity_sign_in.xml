<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_sprint"
    tools:context=".SignInActivity">


    <ImageView
       android:id="@+id/iv_back_signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></ImageView>

    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="25sp"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_form2"
        app:cardCornerRadius="30dp"
        android:orientation="vertical"
        android:layout_marginTop="100dp"

        app:layout_constraintTop_toBottomOf="@+id/iv_back_signIn"



        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_back_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Welcome Back"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/custom_sprint"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/custom_sprint"
                android:text="Continue to Sign In!"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Name"
                android:padding="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="70dp"
                android:textColor="@color/custom_lightgrey"
                android:id="@+id/name_tagin"></TextView>





            <EditText
                android:id="@+id/et_1_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/et_1_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:hint="Enter the Name"
                android:textColorHint="#D3D3D3"
                android:padding="15dp"></EditText>







            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Password"
                android:layout_marginLeft="10dp"
                android:padding="10sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/custom_lightgrey"
                android:id="@+id/passwordtag"
                />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:background="@drawable/et_1_bg"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:padding="15dp"
                android:textColorHint="@color/custom_lightgrey"></EditText>

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Sign In"

                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:padding="15dp"
                android:layout_marginBottom="10sp"

                android:background="@drawable/signup_bg"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/custom_sprint"

                android:text="Forgot Password?"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"

                android:text="Don't Have an Account?"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/signuplink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/custom_sprint"

                android:text="Sign Up"
                android:gravity="center"
                android:layout_marginBottom="150sp"
                />





        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>